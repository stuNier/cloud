<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.sso.api.mapper.UserMapper">

    <resultMap id="user" type="com.zx.sso.api.bean.User">
        <id property="id" column="id"/>
        <result property="loginId" column="login_id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="createdTime" column="created_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectByLoginId" resultMap="user" parameterType="java.lang.String">
        SELECT
            "id", "login_id", "name", "password", "status", "created_time", "update_time"
        FROM
	        "user"."user"
	    where "id" = #{loginId}
    </select>

</mapper>
